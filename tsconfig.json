{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "newLine": "LF",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": [
    "./**/*.test.ts",
    "node_modules"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "setup-tests.js"
  ]
}
